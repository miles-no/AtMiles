#mainContent.row(ng-show="isAuthenticated" ng-cloak)
   .large-12.columns
   .row
      .small-12.main-header.columns
         h1.main-header-text1 Make contact
         h3.main-header-text2 with other Miles consultants !
         h5.main-header-text3 Search for name, last name or find consultants from the list below.
         .row
            .small-12.columns
               #searchContainer.small-12.medium-9.columns.small-centered.main-header-search-container
                  label
                     input.left.input-lg.main-header-search-input(ng-style="{'width' : searchWidth}" ng-model="queryTerm" debounce="250" type="text" placeholder="Search for employee..")
                  #searchButton.right.a.main-header-search-button.postfix(ng-click="search()")
                     label.main-header-search-button-label Search
                  div(style="clear:both;")
   .row.contact-results(infinite-scroll="search('true')" infinite-scroll-disabled="searching")
      .small-12.columns.small-centered.text-center
         img.busy-image(src="../images/busy.gif" ng-show="dataLoading")
      div.result-text(ng-show="searchPerformed == true") Miles Consultants {{searchResult.Results.length}}Â / {{totalHits}}
      ul.large-block-grid-3.medium-block-grid-2.small-block-grid-1.contact-grid(ng-show="searchResult.Results.length > 0")
         li.contact-grid-item(ng-repeat="item in searchResult.Results")
            div.contact-card
               img.contact-image(src="{{item.Thumb}}" height="100" width="100")
               a.vcard-link(ng-href="{{item.VCard}}"  target="_blank")
                  img.contact-vcard.right(title="Download vCard")
               div.small-7.contact-section.columns
                  b.contact-text {{item.Name}}
                  p.contact-text {{item.JobTitle}}
                  a.contact-email(href="tel:{{item.PhoneNumber}}"){{item.PhoneNumber}}
                  br
                  a.contact-email(href="mailto:{{item.Email}}"){{item.Email}}
   .row
